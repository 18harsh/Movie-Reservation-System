{{!-- Modal --}}
{{# if loginsuccess }}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Email</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="https://formspree.io/meqpojbb" method="POST">
          <div class="form-group">
            <label for="recipient-name" class="col-form-label">Name:</label>
            <input type="text" class="form-control" id="recipient-name" name="name" value={{userdata.0.Fname}} readonly>
          </div>
          <div class="form-group">
            <label for="recipient-email" class="col-form-label">Recipient:</label>
            <input type="email" class="form-control" id="recipient-email" name="_replyto" value={{userdata.0.Email}} readonly>
          </div>
          <div class="form-group">
            <label for="message-text" class="col-form-label">Message:</label>
            <textarea class="form-control" id="message-text" name="message" style="height: 50px;" placeholder="Type you'r problem and we will reply you soon."></textarea>
          </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <input type="submit" class="btn btn-primary" value="Send">
        </div>
      </form> 
      </div>
      
    </div>
  </div>
</div>
{{ else }}
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Error</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p class="text-danger">Login required!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary"  onclick="window.location.href='/login'">Login</button>
      </div>
    </div>
  </div>
</div>
{{/if}}


