    </div>
    <div>
        <h5 class="pt-3" data-toggle="collapse" data-target="#language">Select Language <i class="fas fa-arrow-down"></i></h5>
        <div id="language" class="collapse show">
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="Hindi" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Hindi</label>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="English" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">English</label>
            </div>
        </div>
    </div>
    <div class="btn-group d-flex justify-content-center">
            <button class="btn btn-success btn-sm" type="submit">Apply Filter</button>
     </form>
            <button class="btn btn-primary btn-sm ml-1" onclick="reset()">Reset Filter</button>
    </div>
   
</div>



<script>
function reset() {
  document.getElementById("exampleCheck1").checked = false;
}

</script>